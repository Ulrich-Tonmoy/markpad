{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Markpad",
    "version": "0.0.6"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "Markpad",
      "icon": ["icons/logo.png", "icons/logo.ico"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Markpad",
        "width": 1000,
        "height": 700,
        "minWidth": 500,
        "minHeight": 350,
        "decorations": false,
        "center": true,
        "transparent": true,
        "titleBarStyle": "Visible"
      }
    ]
  }
}
